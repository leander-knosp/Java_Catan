            <Circle layoutX="52.0" layoutY="40.0" radius="6.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </AnchorPane>
      <Label fx:id="diceLabel" text="Label">
         <font>
            <Font name="Georgia Bold" size="16.0" />
         </font>
         <VBox.margin>
            <Insets top="-20.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="113.0" prefWidth="285.0" spacing="10.0">
         <children>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Rectangle fx:id="woolCard" arcHeight="5.0" arcWidth="5.0" fill="#50d744" height="79.0" stroke="BLACK" strokeType="INSIDE" width="49.0" />
                  <ImageView fitHeight="50.0" fitWidth="50.0">
                     <image>
                        <Image url="@images/woolIcon.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Rectangle fx:id="grainCard" arcHeight="5.0" arcWidth="5.0" fill="#e4c753" height="79.0" stroke="BLACK" strokeType="INSIDE" width="49.0" />
                  <ImageView fitHeight="62.0" fitWidth="62.0">
                     <image>
                        <Image url="@images/grainIcon.png" />
                     </image>
                     <StackPane.margin>
                        <Insets left="-6.0" right="-6.0" />
                     </StackPane.margin>
                  </ImageView>
               </children>
            </StackPane>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Rectangle fx:id="oreCard" arcHeight="5.0" arcWidth="5.0" fill="#a1a09c" height="79.0" stroke="BLACK" strokeType="INSIDE" width="49.0" />
                  <ImageView fitHeight="50.0" fitWidth="50.0">
                     <image>
                        <Image url="@images/oreIcon.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Rectangle fx:id="lumberCard" arcHeight="5.0" arcWidth="5.0" fill="#8a7143" height="79.0" stroke="BLACK" strokeType="INSIDE" width="49.0" />
                  <ImageView fitHeight="50.0" fitWidth="50.0">
                     <image>
                        <Image url="@images/lumberIcon.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
            <StackPane prefHeight="150.0" prefWidth="200.0">
               <children>
                  <Rectangle fx:id="brickCard" arcHeight="5.0" arcWidth="5.0" fill="#d0b390" height="79.0" stroke="BLACK" strokeType="INSIDE" width="49.0" />
                  <ImageView fitHeight="50.0" fitWidth="50.0" preserveRatio="true">
                     <image>
                        <Image url="@images/brickIcon.png" />
                     </image>
                  </ImageView>
               </children>
            </StackPane>
         </children>
      </HBox>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <Label fx:id="grainCount" layoutX="15.0" text="10">
               <font>
                  <Font name="Georgia Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="woolCount" layoutX="76.0" text="10">
               <font>
                  <Font name="Georgia Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="oreCount" layoutX="134.0" text="10">
               <font>
                  <Font name="Georgia Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="lumberCount" layoutX="194.0" text="10">
               <font>
                  <Font name="Georgia Bold" size="13.0" />
               </font>
            </Label>
            <Label fx:id="brickCount" layoutX="253.0" text="10">
               <font>
                  <Font name="Georgia Bold" size="13.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets top="-25.0" />
         </VBox.margin>
      </AnchorPane>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0"> <!-- marker................................................. -->
         <children>
            <Button mnemonicParsing="false" text="Trade with Player" onAction="#"/>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <HBox alignment="CENTER" focusTraversable="true" prefHeight="36.0" prefWidth="161.0" spacing="10.0">
                     <children>
                        <Circle fx:id="redCircle" fill="#c63a2a" radius="21.0" stroke="BLACK" strokeType="INSIDE" onMouseClicked="#onPlayerSelect"/>
                        <Circle fx:id="blueCircle" fill="#3b7acd" radius="21.0" stroke="BLACK" strokeType="INSIDE" onMouseClicked="#onPlayerSelect"/>
                        <Circle fx:id="yellowCircle" fill="#fce903" radius="21.0" stroke="BLACK" strokeType="INSIDE" onMouseClicked="#onPlayerSelect"/>
                        <Circle fx:id="greenCircle" fill="#1abf27" radius="21.0" stroke="BLACK" strokeType="INSIDE" onMouseClicked="#onPlayerSelect"/>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Spinner fx:id="woolSpinnerOther" prefHeight="35.0" prefWidth="71.0" />
