                     <children>
                        <Label text="Wool" />
                        <Label text="Lumber" />
                        <Label text="Ore" />
                        <Label text="Brick" />
                        <Label text="Grain" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Spinner fx:id="woolSpinnerYou" prefHeight="35.0" prefWidth="71.0" />
                        <Spinner fx:id="lumberSpinnerYou" prefHeight="35.0" prefWidth="71.0" />
                        <Spinner fx:id="oreSpinnerYou" prefHeight="35.0" prefWidth="71.0" />
                        <Spinner fx:id="brickSpinnerYou" prefHeight="35.0" prefWidth="71.0" />
                        <Spinner fx:id="grainSpinnerYou" prefHeight="35.0" prefWidth="71.0" />

                     </children>
                  </HBox>
                  <Button mnemonicParsing="false" text="Send" onAction="#trade" />
               </children>
